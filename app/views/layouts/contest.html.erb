      </div><!-- /.navbar-collapse -->
    </div>
  </nav><!-- /navbar -->
</div>

<div class="container-fluid" id="page-content">
  <!--alert and notice-->
  <% if notice %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <strong>Oh Geez! </strong> <%= notice %>
    </div>
  <% end %>
  <% if alert %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <strong>Oh No! </strong> <%= alert %>
    </div>
  <% end %>
  <script type="text/javascript">
    var date;
    var sys_time;
    var refresh;

    window.addEventListener('pageshow', function(){
      refresh = 0;
    });

    window.onpageshow = updateTime();

    function getDate(){
      return new Date($.ajax({async: false}).getResponseHeader("Date"));
    }

    function updateTime(){
      if(refresh === 0){
        date = getDate();
        sys_time = date.getTime();
      }
      showTime();
      sys_time += 1000;
      refresh = (refresh + 1) % 300;
    }
    
    function showTime(){
      var now = new Date(sys_time);
      var h = (now.getUTCHours() + 8) % 24;
      var m = now.getUTCMinutes();
      var s = now.getUTCSeconds();
      var obj = document.getElementById("server-time");
      if(obj)
        document.getElementById("server-time").innerHTML = format_time(h) + ':' + format_time(m) + ':' + format_time(s);
      setTimeout(updateTime, 1000);
    }

    function format_time(i){
      if(i < 10)
        i = '0' + i;
      return i;
    }
  </script>
  <span>伺服器時間：</span><span id="server-time"></span><span> (UTC+8)</span><span style="font-size:12px"> 僅供參考</span>
  <%= yield %>

</div>

</body>
</html>
