<%= form_tag(alter_announcement_path, :method => :post, :class => "col-md-5") do %>
  <div class="form-group">
    <%= label_tag(:name) %>
    <%= text_field_tag(:name, @anno['name'], :class => "form-control input-sm flat") %>
  </div>
  <div class="form-group">
    <%= label_tag(:message) %>
    <%= text_area_tag(:message, @anno['message'], :class => "form-control input-sm flat", :rows => 7) %>
  </div>
  <%= submit_tag("Submit", :class => "btn btn-success btn-xs") %>
<% end %>
